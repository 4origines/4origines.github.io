<div class="container py-4">
  <header class="pb-3 mb-4 border-bottom">
    <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container-fluid">

        <a href="{{ '/' | url }}" class="d-flex align-items-top text-dark text-decoration-none">
          <img src="{{ '/apple-touch-icon.png' | url }}" alt="Microbrasserie 4 Origines" class="me-4">
          <span class="fs-4">{{ site.title }}</span>
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">{% include "navigation.njk" %}</div>
      </div>
    </nav>
  </header>
</div>
